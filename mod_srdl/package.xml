<package>
  <name>mod_srdl</name>
  <version>1.0.0</version>
  <description>Implementation of the Semantic Robot Description Language (SRDL) that
    provides model and reasoning tools to match prerequisites of actions
    to the capabilities of a robot.</description>
  <maintainer email="tenorth@cs.uni-bremen.de">Moritz Tenorth</maintainer>

  <license>GPL</license>

  <url type="website">http://ros.org/wiki/mod_srdl</url>
  <!-- <url type="bugtracker"></url> -->

  <author>Moritz Tenorth</author>
  <author>Tobias Roehm</author>

  <!-- Dependencies which this package needs to build itself. -->
  <buildtool_depend>catkin</buildtool_depend>

  <!-- Dependencies needed to compile this package. -->
  <build_depend>ias_knowledge_base</build_depend>
  <build_depend>knowrob_common</build_depend>
  <build_depend>urdf</build_depend>

  <!-- Dependencies needed after this package is compiled. -->
  <run_depend>ias_knowledge_base</run_depend>
  <run_depend>knowrob_common</run_depend>
  <run_depend>urdf</run_depend>

  <!-- Dependencies needed only for running tests. -->
  <!-- <test_depend>ias_knowledge_base</test_depend> -->
  <!-- <test_depend>knowrob_common</test_depend> -->
  <!-- <test_depend>urdf</test_depend> -->

<export>
    <rosdoc config="rosdoc.yaml"/>
</export>

</package>